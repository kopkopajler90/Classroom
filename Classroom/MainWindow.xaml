<Window x:Class="Classroom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Classroom"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="_Fájl">
                <MenuItem Header="_Kilépés" />
            </MenuItem>
            <MenuItem Header="_Nézet">
                <MenuItem x:Name="miKurzusNezet" Header="Kurzusok" Click="miKurzusNezet_Click"></MenuItem>
                <MenuItem x:Name="miTanuloNezet" Header="Tanulók" Click="miTanuloNezet_Click"></MenuItem>
                <MenuItem x:Name="miOktatokNezet" Header="Oktatók" Click="miOktatokNezet_Click"></MenuItem>
                
            </MenuItem>
            <MenuItem Header="Hozzárendelés" x:Name="miHozza" Click="miHozza_Click"></MenuItem>
            


        </Menu>
        <UserControl x:Name="ucKurzusNezet" Margin="0,39,0,0"/>


    </Grid>
</Window>
